{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"declaration": true,
		"baseUrl": "src",
		"paths": {"*": ["*"]},
		"outDir": "dist",
		"lib": ["ESNext"],
		"newLine": "LF",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"target": "ES2018",
		"types": ["node"],
		"sourceMap": false
	},
	"include": ["src"]
}
